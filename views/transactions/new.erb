<h1>Add your transaction details</h1>

<form action="/transactions" method="post">
<label>
  Choose existing Merchant:
  <select name="merchant_id">
    <% @merchants.uniq! {|merchant| merchant.merchant_name}  %>
    <% for merchant in @merchants %>
    <option value="<%= merchant.id %>"><%= merchant.merchant_name %></option>
    <% end  %>
  </select>
</label>

<label>
New Merchant:
<input type="text" name="merchant_name" value="">
</label>
<input class="bt btn--action" type='submit' value="Add merchant">



<label>
  Choose existing tag:
  <select name="tag_id" id="">
    <% @tags.uniq! {|tag| tag.tag_name}  %>
    <% for tag in @tags %>
    <option value="<%= tag.id %>"><%= tag.tag_name %></option>
    <% end  %>
  </select>
  <label>
  New tag:
  <input type="text" name="tag_name" value="">
  </label>
  <input class="bt btn--action" type='submit' value="Add tag">

<label>
Amount:
<input type="number" name="amount" value="amount" step=".01">
</label>

<input class="bt btn--action" type='submit' value="Add">

</form>
