<form action="/transactions/<%= @transaction.id %>" method="POST">

  <label for="transaction"></label>

  <h1>Edit your transaction details</h1>

  <label>
    Choose existing Merchant:
    <select class="select-css" name="merchant_id">
      <% for merchant in @merchants %>
      <option value="<%= merchant.id %>" <%= "selected" if @transaction.merchant.id == merchant.id %>>
        <%= merchant.merchant_name %>
      </option>
      <% end  %>
    </select>
  </label>


  <label>
    Choose existing tag:
    <select class="select-css" name="tag_id" id="">
      <% for tag in @tags %>
      <option <%= "selected" if @transaction.tag.id == tag.id %> value="<%= tag.id %>">
        <%= tag.tag_name %>
      </option>
      <% end  %>

    </select>


    <label>
      Amount:
      <input type="number" name="amount" value="<%= @transaction.amount %>" step=".01">
    </label>

    <label>
      Date:
      <input type="date" name="date_of_transaction" value=
      <% date = Date.strptime(@transaction.date, '%d-%m-%Y')
      @transaction.date = date.strftime('%Y-%m-%d')%>
      "<%= @transaction.date %>">

    </label>

    <input class="bt btn--action" type='submit' value="Update">



  </form>

  <label>
  <form action="/transactions" method="POST">
    New Merchant:
    <input type="text" name="merchant_name" value="">
    <input class="bt btn--action" type='submit' value="Add merchant">
    New tag:
    <input type="text" name="tag_name" value="">
    <input class="bt btn--action" type='submit' value="Add tag">

  </form>
  </label>
